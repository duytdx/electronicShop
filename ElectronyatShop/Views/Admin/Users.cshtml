@model List<ElectronyatShop.Models.ApplicationUser>

@{
    ViewData["Title"] = "User Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">User Management</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Email</th>
                                    <th>Username</th>
                                    <th>Email Confirmed</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>@user.Id</td>
                                        <td>@user.Email</td>
                                        <td>@user.UserName</td>
                                        <td>
                                            @if (user.EmailConfirmed)
                                            {
                                                <span class="badge bg-success">Confirmed</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">Not Confirmed</span>
                                            }
                                        </td>
                                        <td>
                                            <a href="@Url.Action("UserDetails", new { id = user.Id })" class="btn btn-info btn-sm">
                                                <i class="bi bi-eye"></i> View Details
                                            </a>
                                            <form method="post" action="@Url.Action("ToggleUserRole", new { userId = user.Id })" style="display: inline;">
                                                <button type="submit" class="btn btn-warning btn-sm" onclick="return confirm('Are you sure you want to change this user\'s role?')">
                                                    <i class="bi bi-arrow-repeat"></i> Toggle Role
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>