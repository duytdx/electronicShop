@model List<ElectronyatShop.Models.Order>

@{
    ViewData["Title"] = "Order Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Order Management</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Order Date</th>
                                    <th>Total Price</th>
                                    <th>Status</th>
                                    <th>Items Count</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td>@order.Id</td>
                                        <td>@order.User?.Email</td>
                                        <td>@order.CreateDate.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@order.TotalPrice.ToString("C")</td>
                                        <td>
                                            @switch (order.Status)
                                            {
                                                case ElectronyatShop.Enums.OrderStatus.Ordered:
                                                    <span class="badge bg-warning">Ordered</span>
                                                    break;
                                                case ElectronyatShop.Enums.OrderStatus.Shipped:
                                                    <span class="badge bg-info">Shipped</span>
                                                    break;
                                                case ElectronyatShop.Enums.OrderStatus.OnTheWay:
                                                    <span class="badge bg-primary">On The Way</span>
                                                    break;
                                                case ElectronyatShop.Enums.OrderStatus.Delivered:
                                                    <span class="badge bg-success">Delivered</span>
                                                    break;
                                                case ElectronyatShop.Enums.OrderStatus.Cancelled:
                                                    <span class="badge bg-danger">Cancelled</span>
                                                    break;
                                            }
                                        </td>
                                        <td>@order.OrderItems?.Count() items</td>
                                        <td>
                                            <a href="@Url.Action("OrderDetails", new { id = order.Id })" class="btn btn-info btn-sm">
                                                <i class="bi bi-eye"></i> View Details
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>