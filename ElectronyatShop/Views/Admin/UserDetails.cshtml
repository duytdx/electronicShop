@model ElectronyatShop.Models.ApplicationUser

@{
    ViewData["Title"] = "User Details";
    var roles = ViewBag.Roles as IList<string> ?? new List<string>();
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">User Details</h4>
                    <a href="@Url.Action("Users")" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Users
                    </a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-striped">
                                <tr>
                                    <th>User ID:</th>
                                    <td>@Model.Id</td>
                                </tr>
                                <tr>
                                    <th>Email:</th>
                                    <td>@Model.Email</td>
                                </tr>
                                <tr>
                                    <th>Username:</th>
                                    <td>@Model.UserName</td>
                                </tr>
                                <tr>
                                    <th>Phone Number:</th>
                                    <td>@Model.PhoneNumber</td>
                                </tr>
                                <tr>
                                    <th>Email Confirmed:</th>
                                    <td>
                                        @if (Model.EmailConfirmed)
                                        {
                                            <span class="badge bg-success">Yes</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">No</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Phone Confirmed:</th>
                                    <td>
                                        @if (Model.PhoneNumberConfirmed)
                                        {
                                            <span class="badge bg-success">Yes</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">No</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Two Factor Enabled:</th>
                                    <td>
                                        @if (Model.TwoFactorEnabled)
                                        {
                                            <span class="badge bg-success">Yes</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">No</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Lockout Enabled:</th>
                                    <td>
                                        @if (Model.LockoutEnabled)
                                        {
                                            <span class="badge bg-warning">Yes</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">No</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th>Access Failed Count:</th>
                                    <td>@Model.AccessFailedCount</td>
                                </tr>
                                <tr>
                                    <th>Roles:</th>
                                    <td>
                                        @if (roles.Any())
                                        {
                                            @foreach (var role in roles)
                                            {
                                                <span class="badge bg-primary me-1">@role</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">No roles assigned</span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    
                    <div class="mt-3">
                        <form method="post" action="@Url.Action("ToggleUserRole", new { userId = Model.Id })" style="display: inline;">
                            <button type="submit" class="btn btn-warning" onclick="return confirm('Are you sure you want to change this user\'s role?')">
                                <i class="bi bi-arrow-repeat"></i> Toggle Role
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>